{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "jsx-no-lambda": false,
    "no-console": false,
    "ordered-imports": [
      false
    ],
    "object-literal-sort-keys": [
      false
    ]
  },
  "jsRules": {
    "no-console": false  
  }
}
